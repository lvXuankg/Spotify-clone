# ============================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# Usage: docker-compose -f docker-compose.full.yml --env-file .env up -d

# ============================================
# JWT Secret (same for all services)
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# ============================================
# Cloudinary (File Service)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# Database URLs (Supabase)
# Replace with your actual Supabase connection strings
# ============================================

# Auth Service
AUTH_DATABASE_URL=postgresql://user:password@host:5432/database?schema=auth_service&pgbouncer=true
AUTH_DIRECT_URL=postgresql://user:password@host:5432/database?schema=auth_service

# User Service
USER_DATABASE_URL=postgresql://user:password@host:5432/database?schema=auth_service&pgbouncer=true
USER_DIRECT_URL=postgresql://user:password@host:5432/database?schema=auth_service

# File Service
FILE_DATABASE_URL=postgresql://user:password@host:5432/database?schema=storage_service&pgbouncer=true
FILE_DIRECT_URL=postgresql://user:password@host:5432/database?schema=storage_service

# Artist Service
ARTIST_DATABASE_URL=postgresql://user:password@host:5432/database?schema=catalog_service&pgbouncer=true
ARTIST_DIRECT_URL=postgresql://user:password@host:5432/database?schema=catalog_service

# Album Service
ALBUM_DATABASE_URL=postgresql://user:password@host:5432/database?schema=catalog_service&pgbouncer=true
ALBUM_DIRECT_URL=postgresql://user:password@host:5432/database?schema=catalog_service

# Song Service
SONG_DATABASE_URL=postgresql://user:password@host:5432/database?schema=catalog_service&pgbouncer=true
SONG_DIRECT_URL=postgresql://user:password@host:5432/database?schema=catalog_service

# Playlist Service
PLAYLIST_DATABASE_URL=postgresql://user:password@host:5432/database?schema=catalog_service&pgbouncer=true
PLAYLIST_DIRECT_URL=postgresql://user:password@host:5432/database?schema=catalog_service

# Library Service
LIBRARY_DATABASE_URL=postgresql://user:password@host:5432/database?schema=analytics_service&pgbouncer=true

# Stream Service
STREAM_DATABASE_URL=postgresql://user:password@host:5432/database?schema=analytics_service&pgbouncer=true
STREAM_DIRECT_URL=postgresql://user:password@host:5432/database?schema=analytics_service

# Search Service
SEARCH_DATABASE_URL=postgresql://user:password@host:5432/database?schema=catalog_service&pgbouncer=true
SEARCH_DIRECT_URL=postgresql://user:password@host:5432/database?schema=catalog_service
