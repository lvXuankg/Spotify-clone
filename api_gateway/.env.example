# ============================================
# API GATEWAY ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# Server
PORT=8080
NODE_ENV=development

# Backend URL prefix
PREFIX_BACKEND_URL=http://localhost

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# ============================================
# Redis Configuration (Caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# RabbitMQ Configuration (Message Queue)
# ============================================
# Auth Service
AUTH_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
AUTH_SERVICE_RABBITMQ_QUEUE=auth_queue
AUTH_SERVICE_RABBITMQ_OPTION_DURABLE=true

# User Service
USER_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
USER_SERVICE_RABBITMQ_QUEUE=user_queue
USER_SERVICE_RABBITMQ_OPTION_DURABLE=true

# File Service
FILE_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
FILE_SERVICE_RABBITMQ_QUEUE=file_queue
FILE_SERVICE_RABBITMQ_OPTION_DURABLE=true

# Artist Service
ARTIST_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
ARTIST_SERVICE_RABBITMQ_QUEUE=artist_queue
ARTIST_SERVICE_RABBITMQ_OPTION_DURABLE=true

# Album Service
ALBUM_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
ALBUM_SERVICE_RABBITMQ_QUEUE=album_queue
ALBUM_SERVICE_RABBITMQ_OPTION_DURABLE=true

# Song Service
SONG_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
SONG_SERVICE_RABBITMQ_QUEUE=song_queue
SONG_SERVICE_RABBITMQ_OPTION_DURABLE=true

# Playlist Service
PLAYLIST_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
PLAYLIST_SERVICE_RABBITMQ_QUEUE=playlist_queue
PLAYLIST_SERVICE_RABBITMQ_OPTION_DURABLE=true

# Stream Service
STREAM_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
STREAM_SERVICE_RABBITMQ_QUEUE=stream_queue
STREAM_SERVICE_RABBITMQ_OPTION_DURABLE=true

# Search Service
SEARCH_SERVICE_RABBITMQ_URL=amqp://admin:password@localhost:5672
SEARCH_SERVICE_RABBITMQ_QUEUE=search_queue
SEARCH_SERVICE_RABBITMQ_OPTION_DURABLE=true
