# ============================================
# API Gateway Configuration
# ============================================

# Server Configuration
PORT=8080
NODE_ENV=development
PREFIX_BACKEND_URL=http://localhost

# CORS Configuration (for production)
# Leave empty for default frontend URL in production
FRONTEND_URL=http://localhost:3000

# ============================================
# RabbitMQ Configuration
# ============================================

# Auth Service
AUTH_SERVICE_RABBITMQ_URL=amqp://admin:1234@localhost:5672
AUTH_SERVICE_RABBITMQ_QUEUE=auth_queue
AUTH_SERVICE_RABBITMQ_OPTION_DURABLE=true

# User Service
USER_SERVICE_RABBITMQ_URL=amqp://admin:1234@localhost:5672
USER_SERVICE_RABBITMQ_QUEUE=user_queue
USER_SERVICE_RABBITMQ_OPTION_DURABLE=true
