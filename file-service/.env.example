# ============================================
# FILE SERVICE ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Transaction pooler URL (for queries)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=storage_service&pgbouncer=true

# Direct connection URL (for migrations)
DIRECT_URL=postgresql://user:password@host:5432/database?schema=storage_service

# ============================================
# Cloudinary Configuration (File Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# Health Check
# ============================================
HEALTH_CHECK_PORT=3004

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_QUEUE=file_queue
RABBITMQ_OPTION_DURABLE=true
